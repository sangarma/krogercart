@page "{cartId:int}/{productId:int}"
@model krogercart.Pages_ProductCarts.DeleteModel
@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>Delete Item from Cart</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this item from your cart?
</div>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/img/productimage.jpg" class="img-fluid rounded-start" alt="@Model.ProductCart.Product.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.ProductCart.Product.Name</h5>
                <p class="card-text">Price: @Model.ProductCart.Product.Price.ToString("C")</p>
                <p class="card-text">Quantity: @Model.ProductCart.Quantity</p>
                <p class="card-text"><strong>Total Price:</strong> $@(Model.ProductCart.Quantity * Model.ProductCart.Product.Price)</p>
            </div>
        </div>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="ProductCart.CartID" />
    <input type="hidden" asp-for="ProductCart.ProductID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>