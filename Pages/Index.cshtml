@page
@model krogercart.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>Available Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price.ToString("C")</td>
            <td><img src="@product.ImageURL" alt="@product.Name" style="width:100px;height:auto;" /></td>
            <td>
                <form method="post">
                    <input type="hidden" asp-for="ProductID" value="@product.ProductID" />
                    <button type="submit" asp-page-handler="AddToCart" class="btn btn-success">Add to Cart</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" href="/ProductCarts">Go to Cart</a>
</p>